[Unit]
Description=VectorDB Interface Streamlit Service
After=network.target

[Service]
User={{ app_user }}
WorkingDirectory={{ app_dir }}
ExecStart=/usr/local/bin/streamlit run app.py --server.port {{ app_port }} --server.address 0.0.0.0
Restart=on-failure
RestartSec=5
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=vectordb-app

[Install]
WantedBy=multi-user.target